{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "types": ["webpack-env", "vue/types/vue", "react"],
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@pages/*": ["src/pages/*"],
            "@services/*": ["src/services/*"],
            "@stores/*": ["src/stores/*"],
            "@styles/*": ["src/styles"],
            "@utils/*": ["src/utils/*"],
            "@asstes/*": ["src/assets/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.vue"
    ],
    "exclude": ["node_modules"],
    "files": ["src/shims-vue.d.ts"]
}
