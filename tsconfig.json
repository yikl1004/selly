{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@stores/*": [
                "src/stores/*"
            ],
            "@styles/*": [
                "src/styles"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@asstes/*": [
                "src/assets/*"
            ],
            "@layout/*": [
                "src/layout/*"  
            ],
            "@router/*": [
                "src/router/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "./src/@types/node.d.ts",
        "./src/@types/index.d.ts",
        "./src/@types/shims-vue.d.ts",
        "./src/@types/kakao-sdk.d.ts",
        "./src/@types/edk.d.ts",
        "cli/tsc-staged.ts",
        "src/**/*.ts",
        "src/**/*.vue"
    ],
    "exclude": ["node_modules"]
}